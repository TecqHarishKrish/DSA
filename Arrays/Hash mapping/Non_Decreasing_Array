
#  Optimal solution - O(n) - O(1)


class Solution:
    def nonDecreasingArray(self, nums: List[int]) -> List[int]:
        count=0
        n=len(nums)
        for i in range(n-1):
            if nums[i]>nums[i+1]:
                count+=1
                if count>1:
                    return False
                if i==0 or nums[i-1]<=nums[i+1]:
                    nums[i]=nums[i+1]
                else:
                    nums[i+1]=nums[i]
        return True
